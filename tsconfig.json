{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "types": ["bun-types"],
  },
  "include": ["src/**/*", "*.ts"],
  "exclude": ["node_modules", "dist", "benchmark", "**/*.test.ts"],
}
